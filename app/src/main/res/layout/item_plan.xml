<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="14dp"
    card_view:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Imagen -->
        <ImageView
            android:id="@+id/imgPlan"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="12dp" />

        <!-- Nombre del plan -->
        <TextView
            android:id="@+id/tvPlanName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plan Premium"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/tvPlanDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ideal para familias o grupos grandes"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/tvPlanSpecs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Especificaciones aquí"
            android:textSize="14sp"
            android:paddingTop="10dp"
            android:paddingBottom="8dp"
            android:textColor="@android:color/darker_gray" />


        <!-- Precio -->
        <TextView
            android:id="@+id/tvPlanPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$10.990 CLP / mes"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            android:textColor="@android:color/black" />

        <!-- Información inferior -->
        <LinearLayout
            android:id="@+id/layoutPlanInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tvPlanResolution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resolución: 4K HDR"
                android:textSize="13sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tvPlanDevices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dispositivos simultáneos: 8"
                android:textSize="13sp"
                android:layout_marginTop="2dp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tvPlanProfiles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfiles: 8"
                android:textSize="13sp"
                android:layout_marginTop="2dp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tvPlanDownloads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descargas offline: Sí"
                android:textSize="13sp"
                android:layout_marginTop="2dp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Botón seleccionar -->
        <Button
            android:id="@+id/btnSelectPlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
